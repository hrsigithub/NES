{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-g",
                "-std=c++17",
                "src/main.cpp",
                "src/cpu.cpp",      // cpu.cppがビルド対象に含まれているか確認
                "src/cpu_test.cpp", // テスト用のソースファイル
                "-o", "emulator_test"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
